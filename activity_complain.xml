<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".complain">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Swachh Bharat College Cleaner App"
                android:textStyle="bold"
                android:textSize="25dp"
                android:textColor="#509696"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/c8"
                android:layout_gravity="center"
                ></TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*****COMPLAINT*****"
                android:textSize="20dp"
                android:textColor="#6FB3AC"
                android:layout_marginTop="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ROLL NUMBER*:"
                android:textSize="20dp"
                android:textColor="#6FB3AC"/>
            <EditText
                android:id="@+id/c1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME*:"
                android:textSize="20dp"
                android:textColor="#6FB3AC"/>
            <EditText
                android:id="@+id/c2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="BLOCK*:"
                android:textSize="20dp"
                android:textColor="#6FB3AC"/>

            <EditText
                android:id="@+id/c3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CLASS ROOM*:"
                android:textSize="20dp"
                android:textColor="#6FB3AC"/>
            <EditText
                android:id="@+id/c4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEPARTMENT*:"
                android:textSize="20dp"
                android:textColor="#6FB3AC"/>

            <Spinner
                android:id="@+id/cs"
                android:layout_width="match_parent"
                android:layout_height="25dp"
                android:background="#ffca74" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DATE:"
                android:textSize="20dp"
                android:textColor="#6FB3AC"/>
            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/button1"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginBottom="102dp"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:text="" />
            <DatePicker
                android:id="@+id/datePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/textView1"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="36dp" />  <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="150dp"
            android:padding="10dp"
            >
            <Button
                android:id="@+id/Cb1"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="UPLOAD"
                android:textSize="20dp"
                android:textColor="#D34F7B"
                android:onClick="loadRecord"/>

            <Button
                android:id="@+id/Cb2"
                android:layout_toRightOf="@+id/Cb1"
                android:layout_width="110dp"
                android:layout_height="50dp"
                android:text="Logout"
                android:textColor="#E91E63"
                android:textSize="20dp"
                android:onClick="logout"/>
        </RelativeLayout>
            <Button
                android:id="@+id/Cb3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_share_black_24dp"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="60dp"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#4E7C50"
                android:onClick="complainshare"></Button>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7066075305\n What's App"
                android:textColor="#0F0C0C"
                android:textStyle="bold"
                android:textSize="20dp"
                ></TextView>


        </LinearLayout>
    </FrameLayout>
</ScrollView>
