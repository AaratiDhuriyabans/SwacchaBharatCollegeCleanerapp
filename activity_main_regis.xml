<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/abc"
    tools:context=".main_regis">
    <TextView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/c8"
        android:layout_gravity="center"
        android:gravity="center"></TextView>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="studentregistration"
        android:text="Registration for student"
        android:textColor="#131111"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"></Button>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="Peonregistration"
        android:text="Registration for Peon"
        android:textColor="#131111"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"></Button>

</LinearLayout>