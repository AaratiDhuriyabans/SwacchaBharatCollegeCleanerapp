<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".peon_login">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="150dp"
            android:layout_height="200dp"
            android:background="@drawable/c2"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Swachh Bharat College Cleaner App"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textColor="#509696"
            android:gravity="center"/>
        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text=" Peon Login"
            android:textStyle="bold"
            android:textColor="#5A9C96"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter UserName*:"
            android:textSize="20dp"
            android:textColor="#618B87"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_person_black_24dp"
            />
        <EditText
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Password*:"
            android:textStyle="bold"
            android:textColor="#68928F"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:drawableLeft="@drawable/ic_lock_open_black_24dp"
            />

        <EditText
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPassword" />

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="100dp"
            android:padding="30dp"
            >
            <Button
                android:id="@+id/peonb1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Login"
                android:layout_marginLeft="60dp"
                android:textStyle="bold"
                android:textColor="#111010"
                android:textSize="18dp"
                android:background="#729E9A"
                android:onClick="plogin_Record"/>
            <Button
                android:id="@+id/b2"
                android:layout_toRightOf="@+id/peonb1"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:text="Cancel"
                android:layout_marginLeft="45dp"
                android:textColor="#141313"
                android:textSize="18dp"
                android:textStyle="bold"
                android:background="#729E9A"
                android:onClick="plogin_cancel"/>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>