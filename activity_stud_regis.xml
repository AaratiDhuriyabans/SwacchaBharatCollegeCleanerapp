<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".stud_regis">
    <FrameLayout
        android:layout_width="match_parent"

        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="*****STUDENT REGISTRATION*****"
                android:textSize="20dp"
                android:textColor="#D84444"
                android:layout_marginTop="20dp"
                android:gravity="center"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:background="@drawable/c3"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"></TextView>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ROLL NUMBER*:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#598F5C"/>
            <EditText
                android:id="@+id/rs1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NAME*:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#5A925D"/>
            <EditText
                android:id="@+id/rs2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="UserName*"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#507C52"></TextView>

            <EditText
                android:id="@+id/rs3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                ></EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password*"
                android:textColor="#49774B"
                android:textStyle="bold"
                android:textSize="20dp"></TextView>
            <EditText
                android:id="@+id/rs4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Confirm Password*"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#4C774E"
                ></TextView>
            <EditText
                android:id="@+id/rs5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPassword" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GENDER*:"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="#538D55"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/r1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Male"
                    android:textSize="20dp"
                    android:textColor="#4C804E"
                    android:textStyle="bold"
                    android:onClick="radioClicked"/>
                <RadioButton
                    android:id="@+id/r2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"
                    android:textStyle="bold"
                    android:textColor="#457E47"
                    android:textSize="20dp"
                    android:onClick="radioClicked"/></RadioGroup>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="CLASS*:"
                android:textSize="20dp"
                android:textColor="#519154"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/rs6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIVISION*:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#508352"/>
            <EditText
                android:id="@+id/rs7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DEPARTMENT*:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#53A056"/>

            <Spinner
                android:id="@+id/sp"
                android:layout_width="match_parent"
                android:layout_height="25dp"></Spinner>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MOBILE NUMBER*:"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#58995B"/>
            <EditText
                android:id="@+id/rs8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:padding="20dp">
                <Button
                    android:id="@+id/stb1"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="Save"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:textColor="#D34F7B"
                    android:onClick="addRecord"/>
                <Button
                    android:id="@+id/stb2"
                    android:layout_toRightOf="@+id/stb1"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="UPDATE"
                    android:textStyle="bold"
                    android:textColor="#E91E63"
                    android:textSize="20dp"
                    android:onClick="upRecord"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="400dp"
                android:layout_height="100dp"
                android:padding="20dp">
                <Button
                    android:id="@+id/stb3"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="DELETE"
                    android:textColor="#E91E63"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:onClick="delRecord"/>
                <Button
                    android:id="@+id/stb4"
                    android:layout_toRightOf="@+id/stb3"
                    android:layout_width="110dp"
                    android:layout_height="50dp"
                    android:text="CANCEL"
                    android:textStyle="bold"
                    android:textColor="#E91E63"
                    android:textSize="20dp"
                    android:onClick="studentcancel"
                    />

            </RelativeLayout>
        </LinearLayout>
    </FrameLayout>
</ScrollView>